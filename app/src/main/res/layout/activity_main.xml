<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yuezp.videopickdemo.MainActivity">

    <Button
        android:id="@+id/btn_get_video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="获取视频" />

    <ImageView
        android:id="@+id/iv_video_image"
        android:layout_width="@dimen/dimens_100"
        android:layout_height="@dimen/dimens_100"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_video_title"
        style="@style/style__text_10"
        android:layout_below="@+id/iv_video_image"
        android:text="@string/title" />

    <TextView
        android:id="@+id/tv_video_path"
        style="@style/style__text_10"
        android:layout_below="@+id/tv_video_title"
        android:text="@string/path" />

    <TextView
        android:id="@+id/tv_video_size"
        style="@style/style__text_10"
        android:layout_below="@+id/tv_video_path"
        android:text="@string/size" />

    <TextView
        android:id="@+id/tv_video_duration"
        style="@style/style__text_10"
        android:layout_below="@+id/tv_video_size"
        android:text="@string/duration" />

</RelativeLayout>
